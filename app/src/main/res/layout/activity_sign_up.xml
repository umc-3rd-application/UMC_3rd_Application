<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpActivity">


    <TextView
        android:letterSpacing="0.02"
        android:fontFamily="@font/regular"
        android:textStyle="bold"
        android:textColor="#0a0a0a"
        android:textSize="22sp"
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="41dp"
        android:text="회원가입"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="143dp"
        android:textSize="20dp"
        android:text="이름 입력" />

    <EditText
        android:id="@+id/writeNameView"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="176dp"
        android:layout_marginBottom="507dp"
        android:background="@drawable/rectangle_3"
        android:hint="회원님의 이름을 입력해주세요." />

    <EditText
        android:id="@+id/writeNameView2"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="437dp"
        android:layout_marginBottom="246dp"
        android:background="@drawable/rectangle_3"
        android:hint="비밀번호를 입력해주세요.(10자이상)" />

    <EditText
        android:id="@+id/writeNameView4"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="563dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/rectangle_3"
        android:hint="비밀번호를 한번 더 입력해주세요." />

    <EditText
        android:id="@+id/writeNameView3"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="383dp"
        android:background="@drawable/rectangle_3"
        android:hint="회원님의 이메일(아이디)을 입력해주세요." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="266dp"
        android:text="이메일(아이디) 입력"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="400dp"
        android:text="비밀번호 입력"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="523dp"
        android:text="비밀번호 확인"
        android:textSize="20dp" />

    <Button
        android:id="@+id/SingUpGoToTheNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:text="다음으로" />
</RelativeLayout>