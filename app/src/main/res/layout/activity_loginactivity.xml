<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="760dp"
    android:background="#ffffff">


    <ImageButton
        android:id="@+id/loginBackButton"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="347dp"
        android:layout_marginBottom="677dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />





    <TextView


        android:layout_width="328dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="25dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="7dp"

        android:letterSpacing="0.02"
        android:fontFamily="@font/regular"
        android:text="아이디와 비밀번호를\n입력해주세요."
        android:drawable="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:textColor="#0a0a0a"
        android:textSize="22sp"
        android:textStyle="normal" />

    <LinearLayout

        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="499dp"
        android:background="@drawable/button_id"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText

            android:id="@+id/writeId"
            android:background="@null"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:hint="아이디"
            android:textColor="#aeaeae"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="433dp"
        android:background="@drawable/button_id"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:inputType="textPassword"
            android:id="@+id/writePassword"
            android:background="@null"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:hint="비밀번호"
            android:textColor="#aeaeae"
            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="343dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="369dp"
        android:background="@color/default_button_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="로그인"
        >
    </androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/moveToSignUpActivity"
        android:layout_width="76dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="401dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="335dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:letterSpacing="0.02"
        android:text="회원가입"
        android:textColor="#818181"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/movetoFindPassword"
        android:layout_width="76dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="401dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="335dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:letterSpacing="0.02"
        android:text="비밀번호 찾기"
        android:textColor="#818181"
        android:textSize="12sp"
        android:textStyle="normal" />


</RelativeLayout>
