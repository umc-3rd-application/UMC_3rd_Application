<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpActivity">

    <ImageButton
        android:id="@+id/btn_back_signup2"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="368dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <TextView
        android:letterSpacing="0.02"
        android:fontFamily="@font/regular"
        android:textStyle="bold"
        android:textColor="#0a0a0a"
        android:textSize="22sp"
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="41dp"
        android:text="회원가입"
        />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/regular"
        android:letterSpacing="0.02"
        android:text="개인정보 이용방침"
        android:textColor="#0a0a0a"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="327dp"
        android:fontFamily="@font/regular"
        android:letterSpacing="0.02"
        android:text="본인 인증"
        android:textColor="#0a0a0a"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/FinishSignUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="회원가입 완료/프로필 작성으로 이동" />

    <Button
        android:id="@+id/confirmSignUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp"
        android:text="인증번호 확인" />

    <Button
        android:id="@+id/goToTheLinkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="231dp"
        android:text="개인정보 이용방침 보러 가기" />

    <TextView

        android:id="@+id/textView7"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="5dp"
        android:text="개인정보 이용방침을 보러가지 않으면,\n회원가입이 완료되지 않아요!" />

    <TextView

        android:id="@+id/textView9"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="371dp"
        android:layout_marginEnd="5dp"
        android:text="본인 인증을 하지 않으면,\n회원가입이 완료되지 않아요!" />

    <EditText
        android:id="@+id/pressEmailAddress"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="262dp"
        android:inputType="textEmailAddress"
        android:hint="이메일 주소를 입력해주세요!" />

    <EditText

        android:id="@+id/pressVerificationcode"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="146dp"
        android:inputType="number"
        android:hint="인증번호를 입력해주세요!" />

    <Button
        android:id="@+id/sendConfirmNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="209dp"
        android:text="인증번호 전송" />

</RelativeLayout>