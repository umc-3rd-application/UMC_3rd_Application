<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpActivity">

    <ImageButton
        android:id="@+id/btn_back_signup2"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="368dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.02"
        android:text="회원가입"
        android:textColor="#525252"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="112dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.02"
        android:text="개인정보 이용방침"
        android:textColor="#0a0a0a"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="391dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="305dp"
        android:fontFamily="@font/regular"
        android:letterSpacing="0.02"
        android:text="본인인증"
        android:textColor="#0a0a0a"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:textSize="18sp"
        android:background="@drawable/button"
        android:id="@+id/FinishSignUpButton"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="회원가입 완료/프로필 작성으로 이동" />

    <Button
        android:background="@drawable/button"
        android:id="@+id/goToTheLinkButton"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="개인정보 이용방침 보러 가기" />

    <TextView
        android:textSize="10dp"
        android:id="@+id/textView7"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="5dp"
        android:text="개인정보 이용방침을 아래 버튼을 눌러 확인해주세요.\n외부 페이지로 이동합니다." />

    <EditText
        android:id="@+id/pressEmailAddress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="246dp"
        android:hint="이메일 주소를 입력해주세요!"
        android:inputType="textEmailAddress" />

    <EditText

        android:id="@+id/pressVerificationcode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="195dp"
        android:hint="인증번호를 입력해주세요!"
        android:inputType="number" />

    <Button
        android:id="@+id/signUp2Send"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="327dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="246dp"
        android:background="@drawable/button_round"
        android:text="발송"
        android:textSize="12sp" />

    <Button
        android:id="@+id/signUp2Confirm"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="329dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="195dp"
        android:background="@drawable/button_round"
        android:text="확인"
        android:textSize="12sp" />

</RelativeLayout>