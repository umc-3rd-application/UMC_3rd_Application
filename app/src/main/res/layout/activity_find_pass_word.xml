<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="760dp"
    android:background="#ffffff">


    <ImageButton
        android:id="@+id/loginBackButton"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="347dp"
        android:layout_marginBottom="677dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="683dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.02"
        android:text="비밀번호 찾기"
        android:textColor="#525252"
        android:textSize="14sp"
        android:textStyle="normal" />




    <TextView


        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="591dp"
        android:letterSpacing="0.02"
        android:fontFamily="@font/regular"
        android:text="비밀번호를 찾으려는\n아이디를 입력해주세요."
        android:textStyle="bold"
        android:textColor="#0a0a0a"
        android:textSize="22sp"
         />


    <EditText
        android:id="@+id/findPasswordwriteId"
        android:hint="아이디(이메일)을 입력해주세요."
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="498dp"
        android:background="@drawable/rectangle_3"></EditText>


    <Button
        android:id="@+id/findPasswordNextButton"
        android:text="다음"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="271dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="441dp"
        android:background="@drawable/button_login"
        android:gravity="center"
        android:orientation="horizontal">

    </Button>
</RelativeLayout>
